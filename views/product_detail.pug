extends layout

block content
  div#product-det.pad2
    #pro.d-flex
      #pro-image
        img(src=product.image)

      #product-details.d-flex
        div#dcard
          h3 #{product.name}
          p#price #[strong Price : ] 
            span #{undefined===product.price?'-':product.price}
              i.fa.fa-inr / Piece
          p #[strong Model number : ] 
            span #{undefined===product.price?'-':product.model_no}
          p #[strong Make/Company : ] 
            span #{undefined===product.price?'-':product.make}
          p #[strong Minimum Order Quantity : ] 
            span #{undefined===product.minOrder?'-':product.minOrder}
          p #[strong Material : ] 
            span #{undefined===product.material?'-':product.material}

    #trade
      p #[strong Payment Terms : ] 
        span #{undefined===product.paymentTerms?'-':product.paymentTerms}
      p #[strong Export market : ] 
        span #{undefined===product.export?'-':product.export}
      p #[strong Domestic Market : ]
        span #{undefined===product.domestic?'-':product.domestic}
      p #[strong Delivery Time : ] 
        span #{undefined===product.deliveryTime?'-':product.deliveryTime}

    #desc
     strong Description :-
     p #{undefined===product.description?'-':product.description}

  #products.pad2
    h2 Products
    p Lorem ipsum dolor sit amet consectetur adipisicing elit. Obcaecati, repellendus!
    div#product-container.d-flex
      each product in products
        div.product
          .product-image
            img(src=product.image)

          div.product-name
           h3
             a(href=product.url) #{product.name}

        div.product
            .product-image
              img(src=product.image)

            .product-name
              h3
                a(href=product.url) #{product.name}
                
      else
        p This category has no products