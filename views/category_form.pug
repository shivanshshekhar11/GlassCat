extends layout

block content
  div#admin-new-category.pad2
    h1 #{title}

    #form.d-flex
      form(method='POST' action='')
        div.form-group1
          label(for='name') Name:
          input#name.form-control(type='text', placeholder='e.g. Engineering Equipment' name='name' value=(undefined===category ? '' : category.name))

        div.form-group1
          label(for='description') Description:
          textarea#description.form-control(type='textarea', placeholder='Description ...' name='description' rows="5" cols="50") #{undefined===category ? '' : category.description}

        div.form-group1
          label(for='password') Password:
          input#password.form-control(type='password' name='password' placeholder="Enter Password")
        
        button#submit-button.btn.btn-primary(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg