extends layout

block content
  ul#product-list.pad2
    h1 Search Results for "#{query}"

    div#product-container.d-flex
      each product in products
        div.product(onclick='location.href=' + "'" + product.url + "'") 
          .product-image(onclick='location.href=' + "'" + product.url + "'") 
            img(src=product.image)

          div.product-name
            h3
              a(href=product.url) #{product.name}

      else
        p No search results
        #sad 
