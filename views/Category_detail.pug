extends layout

block content
  div#product-list-cat.pad2 

    h1 #{Category.name}

    #descDiv
      p !{Category.description}

    div#product-container.d-flex
      each product in Products
        div.product(onclick='location.href=' + "'" + product.url + "'") 
          .product-image(onclick='location.href=' + "'" + product.url + "'") 
            img(src=product.image)

          div.product-name
           h3
             a(href=product.url) #{product.name}

      else
        p This category has no products