extends layout

block content
  #catalogue-image 
    p INSERT IMAGE HERE

  div#about
    h1 Product Categories

    ul#cat-list
      each category in categories
        li.list-items

          p.cat-name #{category.name}

          ul.subcat-list
              each subCategory in subCategories
                  if subCategory.category.name === category.name
                      li.sublist-items
                        a(href=subCategory.url) #{subCategory.name}

      else
        span There are no Categories.